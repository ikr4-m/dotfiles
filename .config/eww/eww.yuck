; Import all window
(include "mainmenu.yuck")
(include "widget.yuck")
(include "music.yuck")

; Mainmenu
(defwindow mainmenu
    :wm-ignore: true
    :monitor 0
    :windowtype "dialog"
    :focusable true
    :geometry (geometry :x "0px"
                        :y "0px"
                        :width "15%"
                        :height "50%"
                        :anchor "center")
    (wmainmenu)
)

; Widget
(defwindow widget
    :wm-ignore true
    :monitor 0
    :windowtype "dock"
    :focusable false
    :geometry (geometry :x "-2%"
                        :y "5%"
                        :width "15%"
                        :anchor "top right")
    :stacking "bg"
    (wwidget)
)

; Music
(defwindow music
    :wm-ignore true
    :monitor 0
    :windowtype "dock"
    :focusable false
    :geometry (geometry :x "2%"
                        :y "5%"
                        :width "15%"
                        :anchor "top left")
    :stacking "bg"
    (wmusic)
)
